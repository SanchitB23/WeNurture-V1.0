        <activity
            android:name=".Semester4Subjects.PV.PVResources"
            android:label="Study Materials PV" />
        <activity
            android:name=".Semester4Subjects.HMM.HMMResources"
            android:label="Study Materials HMM" />
        <activity
            android:name=".Semester4Subjects.DS.DSResources"
